{
  "expo": {
    "name": "Layerz Wallet",
    "slug": "layerzwallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ios_1024x1024.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.layerzwallet.mobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      },
      "icon": "./assets/images/ios_1024x1024.png"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA"],
      "package": "com.layerzwallet.mobile",
      "icon": "./assets/images/android_512x512.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android_512x512.png",
        "backgroundColor": "#000000"
      },
       "intentFilters": [
        {
          "action": "VIEW",
          "data": [{ "scheme": "layerzwallet" }, { "scheme": "exp+layerzwallet" }],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": {
            "scheme": "exp+layerzwallet",
            "host": "expo-development-client"
          },
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "splash": {
      "image": "./assets/images/ios_1024x1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ios_1024x1024.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes with addresses"
        }
      ],
      "expo-secure-store",
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "79e33289-7bd2-4ab4-8363-88ca65e99327"
      }
    },
    "owner": "layerztec"
  }
}