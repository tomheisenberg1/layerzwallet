{
  "name": "layerzwallet",
  "version": "1.1.0",
  "description": "Manage your Bitcoin across multiple Layer 2 solutions",
  "repository": {
    "type": "git",
    "url": "https://github.com/layerztec/layerzwallet.git"
  },
  "scripts": {
    "postinstall": "rm -f node_modules/silent-payments/tsconfig.json",
    "build": "node utils/build.js",
    "start": "node utils/webserver.js",
    "unit": "vitest run ../shared/tests/unit-vi/ ./src/tests/unit-vi/ --silent",
    "integration": "vitest run ../shared/tests/integration-vi/ --silent",
    "e2e": "playwright test",
    "test": "npm run unit && npm run integration && npm run circular",
    "circular": "npx tsx utils/madge.ts",
    "lint": "prettier '**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}' '../shared/**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}' --config ./.prettierrc --check && tsc --noEmit && eslint ./",
    "lint:write": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}' '../shared/**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}' --config ./.prettierrc; eslint ./ --fix",
    "lint:fix": "npm run lint:write",
    "prepare": "cd .. && husky ext/.husky"
  },
